# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /                            @controllers.Application.index()

# Login page
GET    /login                       @controllers.Application.login()

# Login page
GET    /logout                       @controllers.Application.logout()

# Check user credentials
POST    /login-verify               @controllers.Application.verifyUser()

# Create User Account
POST    /create-account             @controllers.Application.createUser()

# Create Team for all Users to try to join
POST    /create-team                @controllers.Application.createTeam()

# Welcome New User
GET     /welcome                    @controllers.Application.welcome(userName : String)

# See User Dashboard
GET     /dashboard                  @controllers.Application.dashboard()

# Show Team dashboard view with Sprints
GET     /dashboard/team/:teamID     @controllers.Application.teamDashboard(teamID : Long)

# Sprint information
GET     /sprint-info                @controllers.Application.sprintInfo()

# Web Jars reference
GET     /webjars/*file              @controllers.WebJarAssets.at(file)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               @controllers.Assets.versioned(path="/public", file: Asset)